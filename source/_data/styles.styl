/* styles for like button */
.gh-like-btn {
  display: inline-flex;
  width: max-content;
  align-items: center;
  gap: 6px; /* space between icon and text */
  padding: 6px 12px;
  border: 1px solid #ccc;
  border-radius: 6px;
  background-color: #f5f5f5;
  color: #333;
  font-size: 0.95rem;
  cursor: pointer;
  transition: all 0.2s ease;
}

.gh-like-btn i {
  font-size: 1.1rem;
}

/* Hover effect */
.gh-like-btn:hover {
  background-color: #e0e0e0;
  border-color: #999;
}

/* Disabled / already liked */
.gh-like-btn.liked {
  background-color: #ffd43b;
  color: #fff;
  border-color: #f0c000;
  cursor: not-allowed;
}

/* Optional darkmode support */
body.darkmode--activated .gh-like-btn {
  background-color: #444;
  color: #eee;
  border-color: #555;
}

body.darkmode--activated .gh-like-btn.liked {
  background-color: #f0c000;
  color: #222;
}

body.darkmode--activated .gh-like-btn:hover {
  background-color: #d0d0d0;
  border-color: #e0e0e0;
}

/* comment counts and like counts display*/
.post-meta-count {
  display: inline;
}

/*  bookmark color in dark mode*/
body.darkmode--activated .book-mark-link::before {
  color: #eee;
}

